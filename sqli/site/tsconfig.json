{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "dest",
        "rootDir": "src",
        "module": "ES6",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "pretty": true,
        "lib": ["es2017", "esnext.asynciterable"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "allowJs": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"],
    "compileOnSave": false
}